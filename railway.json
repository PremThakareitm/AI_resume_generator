{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd resume-ai-backend && chmod +x ./mvnw && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd resume-ai-backend && java -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
